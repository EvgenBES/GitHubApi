<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorBar</item>
        <item name="colorPrimaryDark">@color/colorPrimary</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="UserName">
        <item name="android:textColor">@color/colorDarkGray</item>
        <item name="android:textSize">16sp</item>
        <item name="android:fontFamily">@font/roboto_medium</item>
    </style>

    <style name="UserId">
        <item name="android:textColor">@color/colorGray</item>
        <item name="android:textSize">12sp</item>
        <item name="android:fontFamily">@font/roboto_regular</item>
    </style>

    <style name="UserTextId" parent="UserId">
        <item name="android:textColor">@color/colorDarkGray</item>
    </style>

    <style name="UserDetailsItem">
        <item name="android:textColor">@color/colorDarkGray</item>
        <item name="android:textSize">17sp</item>
        <item name="android:fontFamily">@font/roboto_regular</item>
    </style>


    <style name="UserDetailsItemSub" parent="UserId">
        <item name="android:textSize">16sp</item>
        <item name="android:layout_marginStart">5dp</item>
    </style>

</resources>
